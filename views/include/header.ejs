<script type="module">
  import { app } from '/javascripts/firebase.js'
  import { getAuth } from "https://www.gstatic.com/firebasejs/11.7.3/firebase-auth.js"
  const auth = getAuth(app)
  console.log(auth);
// module영역에서는 onclick에서 호출하는 함수가 호출이 안됨
// -> addEventListener
// 여기는 자사크립트 영역 이다
// localStorage에 email 값이 있는가?
  const myEmail = localStorage.getItem("email")
  // 세션에서 읽어온 email 값을 출력하기
  // index.js(routes) - req.session.email
  const semail = '<%= email %>'
  console.log("session에 저장된 email은 "+semail); // null, test@hot.com
if(myEmail){//email이 존재한다. 그러면 로그인을 한 사람이다.
    // 로그인은 안보이게 로그아웃은 보이게하고 또 이메일도 출력해준다. 
    document.querySelector("#login").style.display = 'none'
    document.querySelector("#logout").style.display = 'block'
    document.querySelector("#myEmail").style.display = 'block'
    // a태그 내부에 이메일 문자열 치환하기
    document.querySelector("#myEmail").querySelector("a").textContent = myEmail
  }
  else{
    document.querySelector("#login").style.display = 'block'
    document.querySelector("#logout").style.display = 'none'
    document.querySelector("#myEmail").style.display = 'none'
  }
  // 로그아웃 처리
  // 1) 비번으로 로그인 한 경우는 로그아웃 처리를 localStorage상태값을 지운다
  // 2) 구글계정으로 로그인한 경우는 함수만 호출하면 된다(비동기처리 -> 지연)
  // 로그인에 대한 상태값의 관리 책임이 구글한테 있다
  // 여기서 logout은 a태그이다
  const logout = document.querySelector("#logout")
  logout.addEventListener('click', async() => {
    console.log('logout호출 성공');
    try {
      // 구글계정으로 로그인을 했을 때 로그아웃 하는 방법
      await auth.signOut();
      // 비번으로 로그인을 했을 때는 내가 직접 localStorage삭제해서
      // 로그인 상태를 풀어준다
      localStorage.clear('email')// email만 지우기
      // localStorage.clear()// 모두 다 지우기
      // 카카오 로그인 일 때는 세션을 지워줘 <- 서버에서 삭제 해야함
      // 브라우저에서는 세션을 삭제할 수 없다
      // 세션은 서버의 cache메모리에 저장되어 있음
      // 라우터에 요청을 해야 한다
      // 로그아웃이 성공하면 home으로 돌아간다
      location.href='/home' //index.js
    } catch (error) {
      console.error('로그아웃 중 에러 발생', error);
    }
  })
</script>